<div class="page-content">
<div class="entry-content -cf">
<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> No se puede guardar el registro:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th><%= f.label :name, "Nombre" %>
    <%= f.text_field :name %></th>
      <th><%= f.label :email, "Email" %>
    <%= f.text_field :email %></th>
      <th><%= f.label :cellphone, "Celular" %>
    <%= f.text_field :cellphone %></th>
    </tr>
  </table>
  </br>
  <div class="field">
    <b><%= f.label :commentaries, "Comentarios" %></br>
    <%= f.text_area :commentaries, :rows => 5, :cols => 50 %>
  </div><br>
  <div class="actions">
    <%= f.submit "Enviar", :class => "link-button green" %>
  </div><br>
<% end %>
</div>
</div>
