<div class="page-content">
<div class="entry-content -cf">
<center><%= form_for(@micropost) do |f| %>
  <% if @micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@micropost.errors.count, "error") %> El post no puede ser guardado:</h2>

      <ul>
      <% @micropost.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title, "Titulo" %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  
  <div class="field">
    <%= f.label :content, "Contenido" %><br>
    <%= f.text_area :content, placeholder: "Escriba el contenido del post", :rows=>6, :cols=>70 %>
  </div>
  <br>

  <div class="field">
    <%= f.label :photo, "Fotografia" %><br>
    <%= f.file_field :photo %>
  </div><br>
  
  <div class="actions">
    <%= f.submit (@micropost.new_record? ? 'Crear Post' : 'Guardar Cambios'), :class => 'link-button blue' %>
  </div>
<% end %>
</center>
</div>
</div>