<h1>Todos los posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.title %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Ver', micropost %></td>
        <td><%= link_to 'Editar', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Eliminar', micropost, method: :delete, data: { confirm: 'Seguro de eliminar el post?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

