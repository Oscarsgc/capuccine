<div class="page-content">
<div class="entry-content -cf">
<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :name, "Nombre" %><br>
    <%= f.text_field :name %>
  </div><br>
  <div class="field">
    <%= f.label :description, "Descripcion" %><br>
    <%= f.text_area :description %>
  </div><br>

  <div class="field">
    <%= f.label :category, "Categoria" %><br>
    <%=f.collection_select(:category, Category.all, :name, :name)%></p>
  </div><br>
  
  <div class="field">
    <%= f.label :photo, "Fotografia" %><br>
    <%= f.file_field :photo %>
  </div><br>

  <div class="actions">
    <%= f.submit "Crear Producto", :class => "link-button green" %>
  </div>
<% end %>
</div>
</div>