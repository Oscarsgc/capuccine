<html class="no-js" > <!--<![endif]-->
	<body>	
		<!-- SLIDER -->
		<div class="slider-wrapper">
		    <div id="slider" class="nivoSlider">
		        <img src="images/dummies/slides/Pic1.jpg" alt=""  />
		        <img src="images/dummies/slides/Pic2.jpg" alt="" />
		        <img src="images/dummies/slides/Pic3.jpg" alt="" />
		        <img src="images/dummies/slides/Pic4.jpg" alt="" />
		        <img src="images/dummies/slides/Pic5.jpg" alt="" />
		        <img src="images/dummies/slides/Pic6.jpg" alt="" />
		    </div>
		</div>
		<!-- ENDS SLIDER -->
				
		<!-- tagline -->
		<div class="tagline"><h1>GERMAINE DE CAPUCCINI</h1></div>
		<h1>Todos los productos</h1>

        <ul class="nav-categories cf">
        </ul>
        <!-- ENDS categories -->
        <!-- work list -->
        <ul class="work-list cf" id="filter-container">
        <% @products.each do |product|%>  
          <li>
            <a href="/products/<%=product.id%>" class="thumb" >
              <%= image_tag product.photo.url %>
              <div class="img-overlay">Ver producto</div>
            </a>
            <a href="/products/<%=product.id%>"  class="title"><%=product.name%></a>
          </li>
        <% end %>          
        </ul>
        <!-- ENDS work list --> 
  <Center><%= will_paginate @products, :previous_label => 'Anterior', :next_label => 'Siguiente' %></Center>
		<!-- ENDS tagline -->
		
		<!-- JS -->
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
		<script>window.jQuery || document.write('<script src="javascripts/jquery.js"><\/script>')</script>
		<script src="javascripts/custom.js"></script>
		
		<!-- superfish -->
		<script  src="javascripts/superfish-1.4.8/js/hoverIntent.js"></script>
		<script  src="javascripts/superfish-1.4.8/js/superfish.js"></script>
		<script  src="javascripts/superfish-1.4.8/js/supersubs.js"></script>
		<!-- ENDS superfish -->
		
		<script src="javascripts/css3-mediaqueries.js"></script>
		
		<script src="javascripts/nivoslider.js"></script>
		<script src="javascripts/tabs.js"></script>
		<!-- ENDS JS -->
	</body>
</html>
